            </div>
            <div class="form-group">
                <label asp-for="AssignmentDate" class="control-label"></label>
                <input asp-for="AssignmentDate" class="form-control" />
                <span asp-validation-for="AssignmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-route-id="@Model.VehicleId" class="btn btn-primary" asp-action="HistorybyvehicleId" asp-route-id="@Model.VehicleId">Back to List</a>

            </div>
        </form>
    </div>
</div>

<div>

    <a asp-route-id="@Model.VehicleId" asp-action="HistorybyvehicleId" asp-route-id="@Model.VehicleId">Back to List</a>
