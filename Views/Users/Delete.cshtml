@model CarManagement.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
    var currentUsername = User.Identity.Name; // Get the username of the currently logged-in user
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this user?</h3>

<div>
    <h4>User Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
    </dl>
</div>



<!-- Check if the current user is not the one being deleted -->
@if (Model.UserName != currentUsername)
{
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <p class="text-danger">You cannot delete your own account.</p>
}
</div>

