@model IEnumerable<CarManagement.Models.Driver>

@{
    ViewData["Title"] = "Drivers";
}

<h1>Drivers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table id="driversTable" class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>License Number</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.LicenseNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.DriverId">Edit</a> |
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.DriverId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DriverId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#driversTable').DataTable();
        });
    </script>
}
