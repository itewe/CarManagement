@model CarManagement.Models.Maintenance

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Maintenance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            DateOfMaintenance
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfMaintenance)
        </dd>
        <dt class="col-sm-2">
            Cost
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            Vehicle Plate number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.PlateNumber)

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MaintenanceId" class="btn btn-primary">Edit</a>
    <a asp-action="Details" asp-controller="Vehicles" class="btn btn-success" asp-route-id="@Model.Vehicle.VehicleId">Take me to the car Details</a>
    <a asp-controller="Maintenances" asp-action="MaintenancebyVehicle" class="btn btn-primary" asp-route-id="@Model.Vehicle.VehicleId">Back to List</a>
</div>
