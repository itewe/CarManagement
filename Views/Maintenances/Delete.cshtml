@model CarManagement.Models.Maintenance

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Maintenance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            DateOfMaintenance
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfMaintenance)
        </dd>
        <dt class="col-sm-2">
            Cost
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            Vehicle Plate number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.PlateNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaintenanceId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Maintenances" asp-action="MaintenancebyVehicle" class="btn btn-success" asp-route-id="@Model.Vehicle.VehicleId">Back To List</a>
    </form>
</div>
